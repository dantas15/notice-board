<%- include('./partials/head', {title: "New Notice"}) %>
  <body>
    <div class="container">
      <br>
      <br>
      
      <% if (typeof msg !== 'undefined') { %>

        <% if (msg.type === "success") { %>

          <div class="alert alert-success alert-dismissible fade show p-4" role="alert">
            <strong><i class="fas fa-check-circle"></i> Sucesso! </strong> <%= msg.body %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

        <% } %> <!-- Fim do if sucesso -->
        
        <% if (msg.type === "error") { %>

          <div class="alert alert-danger alert-dismissible fade show p-4" role="alert">
            <strong><i class="fas fa-exclamation-circle"></i> Erro! </strong> <%= msg.body %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
            
        <% } %> <!-- Fim do if erro -->
      <% } %> <!-- Fim do if typeof-->

      <a href="#"> <i class="fas fa-long-arrow-alt-left"></i> Voltar</a> <br><br>
      <div class="card shadow">
        <div class="card-header bg-purple text-white pl-5 p-4"> 
          <h2 class=""> <i class="fas fa-plus-circle pr-3"></i> Novo Aviso</h2>
        </div> <!-- card-header-->
        <div class="card-body p-5">
          <form action="/notices/new" method="POST">
            <div class="form-group">
              <label for="title">TÃ­tulo</label>
              <input id="title" name="title" placeholder="Digite o titulo do aviso" type="text" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="date">Data</label>
              <input id="date" name="date" type="date" class="form-control" required>
            </div>
            <div class="form-group">
              <label for="message">Mensagem</label>
              <textarea 
                id="message" 
                name="message" 
                cols="40" rows="5"
                class="form-control" 
                placeholder="Digite o aviso Completo aqui"
                required></textarea>
            </div>
            <div class="form-group text-right">
              <button name="submit" type="submit" class="btn btn-secondary">Limpar</button>
              <button name="submit" type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
          </form>
        </div> <!-- card-body -->
      </div> <!-- card-->
    </div> <!-- container -->
    
    <%- include('./partials/scripts_import')%> 
  </body>
</html>
